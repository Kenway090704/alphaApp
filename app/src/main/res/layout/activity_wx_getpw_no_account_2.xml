<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.alpha.alphaapp.ui.widget.TitleLayout
        android:id="@+id/wx_getpw_no_account_titlelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:txt_title="@string/insure_account" />

    <com.alpha.alphaapp.ui.widget.OneTwoThreeItemView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:curent_select="2"
        app:txt_first="@string/input_verify"
        app:txt_second="@string/insure_account"
        app:txt_third="@string/reset_pw" />

    <com.alpha.alphaapp.ui.widget.et.AccountEditText
        android:id="@+id/wx_getpw_no_account_aet_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hint="@string/account_alpha_format"
        app:icon_type="@drawable/icon_user" />

    <LinearLayout
        android:id="@+id/wx_getpw_no_account_tv_error_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/wx_getpw_no_account_tv_error_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/icon_tv_error" />

        <TextView
            android:id="@+id/wx_getpw_no_account_tv_error"
            style="@style/tv_error_com_two_line"
            android:lineSpacingExtra="6dp"
            android:maxLines="2"
            android:text="@string/the_wx_no_set_en_account" />
    </LinearLayout>


    <Button
        android:id="@+id/wx_getpw_no_account_btn_resetpw"
        style="@style/btn_com_gray"
        android:text="@string/reset_pw" />
</LinearLayout>