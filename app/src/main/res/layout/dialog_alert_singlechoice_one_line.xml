<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/commom_length_301"
    android:layout_height="@dimen/commom_heigth_159"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_alert_single_one_line_tv_msg_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/commom_margin_42"
        android:layout_marginBottom="@dimen/commom_margin_23"
        android:gravity="center"
        style="@style/dialog_com_tv_gray" />



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/commom_margin_16"
        android:layout_marginRight="@dimen/commom_margin_16"
        android:background="@color/common_bg_dark_gray" />

    <LinearLayout
        android:layout_width="@dimen/commom_length_170"
        android:layout_height="@dimen/commom_btn_height_40"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/commom_margin_4"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_alert_single_one_line_tv_insure"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/common_red"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/insure"
            android:textColor="@color/common_tv_white"
            android:textSize="@dimen/commom_tv_size_18" />
    </LinearLayout>

</LinearLayout>