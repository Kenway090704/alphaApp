<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="@dimen/commom_margin_25"
    android:paddingBottom="@dimen/commom_margin_25">
    <View
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ott_iv_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/icon_normal_1" />

        <TextView
            android:id="@+id/ott_tv_first_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/commom_margin_7"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="验证身份"
            android:textColor="@color/common_tv_dark_gray"
            android:textSize="@dimen/commom_tv_size_12" />
    </LinearLayout>
    <View
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ott_iv_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/icon_normal_2" />

        <TextView
            android:id="@+id/ott_tv_second_msg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/commom_margin_7"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="提交绑定手机"
            android:textColor="@color/common_tv_dark_gray"
            android:textSize="@dimen/commom_tv_size_12" />
    </LinearLayout>
    <View
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:id="@+id/ott_layout_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ott_iv_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/icon_normal_3" />

        <TextView
            android:id="@+id/ott_tv_third_msg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/commom_margin_7"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="输入奥飞帐号"
            android:textColor="@color/common_tv_dark_gray"
            android:textSize="@dimen/commom_tv_size_12" />
    </LinearLayout>
    <View
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"/>
</LinearLayout>