<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/register_frag_et_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/phone_number" />
    <EditText
        android:id="@+id/register_frag_et_verifycode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/verify_code" />

    <EditText
        android:id="@+id/register_frag_et_phoneverifycode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/phone_verify" />
    <EditText
        android:id="@+id/register_frag_et_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/input_pw" />

    <EditText
        android:id="@+id/register_frag_et_insurepw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/insure_pw" />

    <EditText
        android:id="@+id/register_et_tuiguang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/tui_guang" />

      <Button
          android:id="@+id/register_btn_register"
          android:text="@string/register"
          android:textSize="20sp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />
</LinearLayout>