<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/commom_heigth_55"
    android:background="@color/common_bg_white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/widget_mod_icon_tv_left"
        style="@style/mine_left_item"
        android:text="@string/avatar" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="right"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/commom_margin_13"
            android:layout_height="wrap_content">

            <View
                android:layout_width="@dimen/commom_margin_47"
                android:layout_height="@dimen/commom_margin_47"
                android:layout_centerInParent="true"
                android:background="@drawable/shape_bg_round_gray" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/widget_mod_icon_riv_msg"
                android:layout_width="@dimen/commom_margin_45"
                android:layout_height="@dimen/commom_margin_45"

                android:scaleType="centerCrop"
                android:src="@drawable/launcher"
                android:layout_centerInParent="true"
                android:textColor="@color/common_tv_black"
                app:riv_oval="true" />

        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/widget_mod_icon_iv_right"
        style="@style/mine_next"
        android:layout_gravity="center"
        android:gravity="center" />
</LinearLayout>