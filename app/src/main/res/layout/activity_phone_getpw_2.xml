<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.alpha.alphaapp.ui.widget.TitleLayout
        android:id="@+id/phone_get_pw_2_titlelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include layout="@layout/layout_get_pw" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/register_item_left_margin"
        android:layout_marginTop="@dimen/register_item_top_margin"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/phone_get_pw_2_et_phoneverify"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/register_item_5dp"
            android:layout_weight="1"
            android:hint="@string/msg_verify"
            android:singleLine="true"
            android:textSize="@dimen/register_item_hint_sp" />

        <TextView
            android:id="@+id/phone_get_pw_2_tv_getVerify"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_bg_round"
            android:clickable="true"
            android:gravity="center"
            android:padding="3dp"
            android:text="@string/get_msg_verify" />
    </LinearLayout>

    <TextView
        android:id="@+id/phone_get_pw_2_tv_error"
        style="@style/tv_error_com" />

    <Button
        android:id="@+id/phone_get_pw_2_btn_resetpw"
        style="@style/btn_com"
        android:text="@string/reset_pw" />
</LinearLayout>