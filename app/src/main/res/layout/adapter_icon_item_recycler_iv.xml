<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_recycler_iv"
        android:layout_width="@dimen/commom_length_90"
        android:layout_height="@dimen/commom_height_90"
        android:layout_gravity="center"
        android:layout_margin="@dimen/commom_margin_5"
        android:layout_marginTop="@dimen/commom_margin_5"
        android:clickable="true"
        android:scaleType="fitCenter"
        android:src="@drawable/launcher" />

    <CheckBox
        android:id="@+id/item_recycler_cb"
        android:layout_width="@dimen/commom_length_91"
        android:layout_height="@dimen/commom_height_91"
        android:layout_gravity="center"
        android:button="@null"
        android:background="@drawable/shape_icon_red_bound"
        android:clickable="false"
        android:enabled="false"
        android:visibility="gone" />
</FrameLayout>