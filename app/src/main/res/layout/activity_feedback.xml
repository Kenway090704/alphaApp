<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg_light_gray"
    android:orientation="vertical">

    <com.alpha.alphaapp.ui.widget.TitleLayout
        android:id="@+id/feedback_titlelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:txt_title="@string/feedback" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="@dimen/commom_length_70"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/commom_margin_30"
            android:layout_weight="1"
            android:text="@string/advise"
            android:textSize="@dimen/commom_tv_size_15" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"

            android:text="@string/fuction_bug"
            android:textSize="@dimen/commom_tv_size_15" />
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/common_bound_line_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_weight="1"
        android:background="@color/common_bg_white">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请在此处输入文本"
            android:textColor="@color/common_tv_light_gray"
            android:textSize="@dimen/commom_tv_size_15" />
    </LinearLayout>


    <com.alpha.alphaapp.ui.widget.et.EmptyEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/commom_margin_8"
        android:gravity="center"
        android:textSize="@dimen/commom_tv_size_18"
        app:hint="@string/contact_ways" />

    <Button
        style="@style/btn_one_com_gray"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="@dimen/commom_margin_20"
        android:text="@string/submit" />
</LinearLayout>
