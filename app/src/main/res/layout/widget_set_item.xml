<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/commom_margin_35"
    android:background="@color/common_bg_white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/widget_set_item_leftiv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/commom_margin_20" />

    <TextView
        android:id="@+id/widget_set_item_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/commom_margin_10"
        android:layout_weight="1"
        android:textSize="@dimen/commom_tv_size_14"
        android:textColor="@color/common_tv_black"
        android:text="@string/account_bing_set" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/commom_margin_30"
        android:src="@drawable/mine_set_next_2" />
</LinearLayout>