<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.alpha.alphaapp.ui.widget.et.AccountEditText
        android:id="@+id/log_fast_aet_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hint="@string/input_valid_eleven_number"
        app:icon_type="@drawable/icon_phone" />

    <com.alpha.alphaapp.ui.widget.et.InputVerifyEditText
        android:id="@+id/log_fast_ivet"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/log_fast_tv_error"
        style="@style/tv_error_com"
        android:visibility="invisible" />

    <Button
        android:id="@+id/log_fast_btn_login"
        style="@style/btn_com_gray"
        android:text="@string/login" />
</LinearLayout>