<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cell_section_hear_iv_logo"
            android:layout_width="@dimen/commom_height_70"
            android:layout_height="@dimen/commom_height_70"
            android:layout_margin="@dimen/commom_margin_10"
            android:background="@drawable/shape_icon_red_bound"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cell_section_hear_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@color/common_tv_black"
                android:textSize="@dimen/commom_tv_size_16" />

            <TextView
                android:id="@+id/cell_section_hear_tv_topic_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/commom_margin_5" />

            <TextView
                android:id="@+id/cell_section_hear_tv_manger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/commom_margin_5" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/cell_section_hear_tv_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/commom_margin_10"
        android:layout_marginRight="@dimen/commom_margin_10"
        android:lineSpacingExtra="@dimen/commom_margin_3"
        android:textColor="@color/common_tv_black" />
</LinearLayout>