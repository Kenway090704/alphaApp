<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.alpha.alphaapp.ui.widget.TitleLayout
        android:id="@+id/phone_get_pw_3_titlelayout"
        app:txt_title="@string/reset_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.alpha.alphaapp.ui.widget.OneTwoThreeItemView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:curent_select="3"
        app:txt_first="@string/verify_msg"
        app:txt_second="@string/input_verify"
        app:txt_third="@string/reset_pw" />


    <com.alpha.alphaapp.ui.widget.et.LoginAccountEditText
        android:id="@+id/phone_get_pw_3_aet_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hint="@string/pw_form"
        app:input_type="password"
        app:icon_type="@drawable/icon_password" />

    <com.alpha.alphaapp.ui.widget.tx.ErrorTextView
        android:id="@+id/phone_get_pw_3_tv_error"
        style="@style/tv_error_com" />

    <Button
        android:id="@+id/phone_get_pw_3_btn_submit"
        style="@style/btn_one_com_gray"
        android:text="@string/submit" />
</LinearLayout>