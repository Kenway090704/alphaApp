<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_bg_dali_withe"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cell_reply_iv_userIcon"
            android:layout_width="@dimen/commom_height_45"
            android:layout_height="@dimen/commom_height_45"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/commom_margin_10"
            android:src="@drawable/ic_launcher" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/commom_margin_10"
            android:layout_marginTop="@dimen/commom_margin_10"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/commom_margin_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cell_reply_tv_userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="星之光"
                    android:textColor="@color/common_tv_blue" />

                <TextView
                    android:id="@+id/cell_reply_tv_userRank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/commom_margin_20"
                    android:text="玩具收藏家" />

                <TextView
                    android:id="@+id/cell_reply_tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/commom_margin_20"
                    android:text="2017-08-09" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/cell_reply_tv_floor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/commom_margin_20"
                    android:layout_marginRight="@dimen/commom_margin_20"
                    android:text="1楼" />
            </LinearLayout>

            <TextView
                android:id="@+id/cell_reply_tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/commom_margin_10"
                android:layout_marginRight="@dimen/commom_margin_10"
                android:layout_marginTop="@dimen/commom_margin_10"
                android:lineSpacingExtra="@dimen/commom_margin_5"
                android:text="据说勋章可以兑换奖品，那么，在哪里兑换呢"
                android:textColor="@color/common_tv_black"
                android:textSize="@dimen/commom_tv_size_12"
                android:visibility="gone" />

            <!--对某一个评论进行评论-->
            <LinearLayout
                android:id="@+id/cell_reply_layout_two_reply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/cell_reply_tv_hint_reply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/commom_margin_10"
                    android:layout_marginRight="@dimen/commom_margin_10"
                    android:layout_marginTop="@dimen/commom_margin_10"
                    android:background="@drawable/shape_reply_text_bg"
                    android:lineSpacingExtra="@dimen/commom_margin_5"
                    android:padding="@dimen/commom_margin_5"
                    android:textColor="@color/common_tv_black"
                    android:textSize="@dimen/commom_tv_size_12" />

                <TextView
                    android:id="@+id/cell_reply_tv_reply_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/commom_margin_10"
                    android:layout_marginRight="@dimen/commom_margin_10"
                    android:layout_marginTop="@dimen/commom_margin_10"
                    android:lineSpacingExtra="@dimen/commom_margin_5"
                    android:text="奖品兑换指南已经发布，可以点击这里查看：http://club.auldey.com/read.php?tid=3479fid=9"
                    android:textColor="@color/common_tv_black"
                    android:textSize="@dimen/commom_tv_size_12" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/commom_margin_10"
                android:layout_marginTop="@dimen/commom_margin_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cell_reply_tv_replyCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="回复"
                    android:textColor="@color/common_tv_green"
                    android:textSize="@dimen/commom_tv_size_12" />

                <TextView
                    android:id="@+id/cell_reply_tv_likeCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/commom_margin_10"
                    android:drawableLeft="@drawable/icon_forum_love_red"
                    android:drawablePadding="@dimen/commom_margin_3"
                    android:text="喜欢"
                    android:textSize="@dimen/commom_tv_size_12" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/commom_height_2"
        android:layout_margin="@dimen/commom_height_2"
        android:background="@color/common_bound_line_gray" />

</LinearLayout>