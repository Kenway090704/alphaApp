<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
    android:id="@+id/cell_section_enter_tv_big_section_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_bg_light_gray"
    android:padding="@dimen/commom_height_8"
    android:text="奥飞俱乐部" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

       android:padding="@dimen/commom_margin_10"
        android:background="@color/common_bg_white"
        android:orientation="horizontal">

        <ImageView

            android:id="@+id/cell_section_enter_iv_section_logo"
            android:layout_width="@dimen/commom_height_60"
            android:src="@drawable/icon_section_logo"
            android:layout_marginLeft="@dimen/commom_margin_10"
            android:layout_height="@dimen/commom_height_60" />

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/commom_margin_10"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cell_section_enter_tv_child_section_name"
                android:text="综合讨论区"
                android:layout_gravity="start"
                android:textColor="@color/common_tv_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginTop="@dimen/commom_margin_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/commom_tv_size_12"
                    android:text="@string/subject_" />

                <TextView
                    android:id="@+id/cell_section_enter_tv_subject_count"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/commom_tv_size_12"
                    android:layout_height="wrap_content"
                    android:text="67" />


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/commom_tv_size_12"
                    android:text="@string/_topic" />

                <TextView
                    android:id="@+id/cell_section_enter_tv_topic_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/commom_tv_size_12"
                    android:text="280" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!--这里的View不要删除-->
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/commom_height_1"/>
</LinearLayout>