<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.alpha.alphaapp.ui.widget.TitleLayout
        android:id="@+id/modify_pbph3_titlelayou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.alpha.alphaapp.ui.widget.OneTwoThreeItemView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:curent_select="3"
        app:icon_first="@drawable/one"
        app:icon_second="@drawable/two"
        app:icon_third="@drawable/three"
        app:txt_first="@string/input_phone"
        app:txt_second="@string/input_verify"
        app:txt_third="@string/set_pw" />

    <EditText
        android:id="@+id/modify_pbph3_et_pw"
        style="@style/et_com"
        android:hint="@string/pw_form" />

    <TextView
        android:id="@+id/modify_pbph3_tv_error"
        style="@style/tv_error_com" />

    <Button
        android:id="@+id/modify_pbph3_btn_save"
        style="@style/btn_com_gray"
        android:text="@string/set_pw" />
</LinearLayout>