<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg_light_gray"
    android:orientation="vertical">

    <com.alpha.alphaapp.ui.widget.TitleLayout
        android:id="@+id/modify_pbph3_titlelayou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.alpha.alphaapp.ui.widget.OneTwoThreeItemView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:curent_select="3"
        app:txt_first="@string/input_phone"
        app:txt_second="@string/input_verify"
        app:txt_third="@string/set_pw" />

    <com.alpha.alphaapp.ui.widget.et.AccountEditText
        android:id="@+id/modify_pbph3_et_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hint="@string/pw"
        app:hint_bracket_msg="@string/pw_form"
        app:icon_type="@drawable/icon_password" />

    <com.alpha.alphaapp.ui.widget.tx.ErrorTextView
        android:id="@+id/modify_pbph3_tv_error"
        style="@style/tv_error_com" />

    <Button
        android:id="@+id/modify_pbph3_btn_save"
        style="@style/btn_one_com_gray"
        android:text="@string/set_pw" />
</LinearLayout>