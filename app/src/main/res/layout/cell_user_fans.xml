<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/commom_margin_10">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cell_user_fans_iv_avatar"
            android:layout_width="@dimen/commom_height_60"
            android:layout_height="@dimen/commom_height_60"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/commom_margin_10"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cell_user_fans_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="大表姐"
                    android:textColor="@color/common_tv_dali_black" />

                <TextView
                    android:id="@+id/cell_user_fans_tv_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/commom_margin_10"
                    android:text="初识玩具"
                    android:textSize="@dimen/commom_tv_size_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/commom_margin_5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cell_user_fans_tv_attention_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关注28"
                    android:textColor="@color/common_tv_dali_black" />

                <TextView
                    android:id="@+id/cell_user_fans_tv_fans_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/commom_margin_10"

                    android:text="粉丝7"
                    android:textColor="@color/common_tv_dali_black" />

                <TextView
                    android:id="@+id/cell_user_fans_tv_topic_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/commom_margin_10"
                    android:text="帖子120"
                    android:textColor="@color/common_tv_dali_black" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/cell_user_fans_tv_add_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shape_bg_round_corner_gray"
            android:paddingBottom="@dimen/commom_margin_3"
            android:paddingLeft="@dimen/commom_margin_10"
            android:paddingRight="@dimen/commom_margin_10"
            android:paddingTop="@dimen/commom_margin_3"
            android:text="+加关注"
            android:textSize="@dimen/commom_tv_size_12" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/commom_height_1"
        android:background="@color/common_bg_dali_light_gray" />
</LinearLayout>