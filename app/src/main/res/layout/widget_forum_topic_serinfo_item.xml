<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/widget_topic_iv_icon"
            android:layout_width="@dimen/commom_height_60"
            android:layout_height="@dimen/commom_height_60"
            android:padding="@dimen/commom_margin_10"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/widget_topic_tv_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="大表姐" />

                <TextView
                    android:id="@+id/widget_topic_tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/commom_margin_10"
                    android:text="2017-08-09" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/commom_margin_10">

                <TextView
                    android:id="@+id/widget_topic_tv_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/common_tv_green" />

                <TextView
                    android:id="@+id/widget_topic_tv_hits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/commom_margin_30"
                    android:drawableLeft="@drawable/icon_forum_eye_red"
                    android:drawablePadding="@dimen/commom_margin_7"
                    android:textColor="@color/common_tv_dark_red" />
            </LinearLayout>
        </LinearLayout>

        <CheckBox
            android:id="@+id/widget_topic_cb_likecount"
            android:layout_width="@dimen/commom_height_30"
            android:layout_height="@dimen/commom_height_30"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/commom_margin_10"
            android:background="@drawable/icon_forum_love_red"
            android:button="@null"
            android:gravity="center"
            android:text="17"
            android:textColor="@color/common_tv_white"
            android:textStyle="bold"
            android:textSize="@dimen/commom_tv_size_10" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/commom_height_2"
        android:background="@color/common_bg_dali_light_gray" />
</LinearLayout>