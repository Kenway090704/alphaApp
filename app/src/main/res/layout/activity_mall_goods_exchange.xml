<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.alpha.alphaapp.ui.widget.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:txt_title="@string/insure_order" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.alpha.alphaapp.ui.widget.mall.OrderAdrrItem
                android:id="@+id/goods_exchange_iosa_addr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/goods_exchange_iv_product"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:src="@drawable/shample" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/commom_margin_20"
                android:layout_marginTop="@dimen/commom_margin_5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/product_name_"
                    android:textSize="@dimen/commom_tv_size_12" />

                <TextView
                    android:id="@+id/goods_exchange_tv_goods_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/commom_margin_10"
                    android:textColor="@color/common_tv_blue"
                    android:textSize="@dimen/commom_tv_size_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/commom_margin_20"
                android:layout_marginTop="@dimen/commom_margin_5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/product_type_"
                    android:textSize="@dimen/commom_tv_size_16" />

                <TextView
                    android:id="@+id/goods_exchange_tv_goods_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/commom_margin_10"
                    android:textColor="@color/common_tv_blue"
                    android:textSize="@dimen/commom_tv_size_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/commom_margin_20"
                android:layout_marginTop="@dimen/commom_margin_5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/need_score_"
                    android:textSize="@dimen/commom_tv_size_16" />

                <TextView
                    android:id="@+id/goods_exchange_tv_need_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/commom_margin_10"
                    android:textColor="@color/common_tv_blue"
                    android:textSize="@dimen/commom_tv_size_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/commom_margin_20"
                android:layout_marginTop="@dimen/commom_margin_5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/exchange_count_"
                    android:textSize="@dimen/commom_tv_size_16" />

                <TextView
                    android:id="@+id/goods_exchange_tv_exchange_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/commom_margin_10"
                    android:textColor="@color/common_tv_blue"
                    android:textSize="@dimen/commom_tv_size_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/commom_margin_20"
                android:layout_marginTop="@dimen/commom_margin_5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/my_score_"
                    android:textSize="@dimen/commom_tv_size_16" />

                <TextView
                    android:id="@+id/goods_exchange_tv_my_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/commom_margin_10"
                    android:textColor="@color/common_tv_blue"
                    android:textSize="@dimen/commom_tv_size_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/commom_margin_20"
                android:layout_marginTop="@dimen/commom_margin_5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/warm_prompt_"
                    android:textColor="@color/common_tv_dark_red"
                    android:textSize="@dimen/commom_tv_size_14" />

                <TextView
                    android:id="@+id/goods_exchange_tv_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/commom_margin_10"
                    android:text="@string/express_is_arrival_pay"
                    android:textColor="@color/common_tv_dark_red"
                    android:textSize="@dimen/commom_tv_size_14" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/commom_margin_10"
                android:layout_marginTop="@dimen/commom_margin_5"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/goods_exchange_tv_exchange_declare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/commom_margin_10"
                    android:textColor="@color/common_tv_dark_red"
                    android:textSize="@dimen/commom_tv_size_14" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/goods_exchange_btn_now_exchange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_bg_red"
        android:text="@string/exchange" />
</LinearLayout>