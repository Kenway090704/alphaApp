<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"

        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/shiping_addr_item_tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/common_tv_black" />

        <TextView
            android:id="@+id/shiping_addr_item_tv_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"

            android:textColor="@color/common_tv_black" />
    </LinearLayout>

    <TextView
        android:id="@+id/shiping_addr_item_tv_addr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:maxLines="2"
        android:textColor="@color/common_tv_black" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/common_bound_line_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center">

        <RadioButton
            android:id="@+id/shiping_addr_item_rb_setdefault"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:checked="false" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/shiping_addr_item_tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawableLeft="@drawable/icon_mine"
            android:drawablePadding="3dp"
            android:text="@string/compile"
            android:textColor="@color/common_tv_black" />

        <TextView
            android:id="@+id/shiping_addr_item_tv_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"

            android:clickable="true"
            android:drawableLeft="@drawable/icon_mine"
            android:drawablePadding="3dp"
            android:text="@string/delete"
            android:textColor="@color/common_tv_black" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="10dp"
        android:background="@color/common_bg_light_gray" />
</LinearLayout>