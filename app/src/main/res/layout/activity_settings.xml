<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/account_security"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/account_security" />

    <Button
        android:id="@+id/message_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/message_settings" />

    <Button
        android:id="@+id/general_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/general_settings" />

    <Button
        android:id="@+id/clear_cache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/clear_cache" />

    <Button
        android:id="@+id/clear_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/clear_history" />

    <Button
        android:id="@+id/clear_draft"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/clear_draft" />

    <Button
        android:id="@+id/score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/score" />

    <Button
        android:id="@+id/feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/feedback" />

    <Button
        android:id="@+id/about_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/about_us" />

    <Button
        android:id="@+id/exit_session"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/exit_session" />
</LinearLayout>
