<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.alpha.alphaapp.ui.widget.TitleLayout
        android:id="@+id/mod_contact_addr_titlelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:txt_title="@string/contact_addr" />

    <com.alpha.alphaapp.ui.widget.mine.ModifyInfoItemView
        android:id="@+id/mod_contact_addr_miiv_pca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:txt_item="@string/province_city_area" />

    <com.alpha.alphaapp.ui.widget.LineView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.alpha.alphaapp.ui.widget.mine.ModifyInfoItemView
        android:id="@+id/mod_contact_addr_miiv_street"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:txt_item="@string/street" />


    <LinearLayout
        android:id="@+id/mod_contact_addr_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_et_bg_gray"
        android:orientation="horizontal"
        android:visibility="gone"
        android:padding="7dp">

        <EditText
            android:id="@+id/mod_contact_addr_et_detail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/plz_input_detail_addr"
            android:maxLength="30"
            android:singleLine="true"
            android:textColor="@color/tv_black"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/mod_contact_addr_et_detail_iv_del"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:src="@drawable/et_del"
            android:visibility="invisible" />
    </LinearLayout>
</LinearLayout>