<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg_light_gray"
    android:orientation="vertical">

    <com.alpha.alphaapp.ui.widget.TitleLayout
        android:id="@+id/mod_contact_addr_titlelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:txt_title="@string/contact_addr" />

    <com.alpha.alphaapp.ui.widget.mine.ModifyInfoItemView
        android:id="@+id/mod_contact_addr_miiv_pca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/commom_margin_10"
        custom:txt_item="@string/province_city_area" />


    <com.alpha.alphaapp.ui.widget.LineView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <LinearLayout
        android:id="@+id/mod_contact_addr_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/commom_heigth_144"
        android:background="@color/common_bg_white"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/mod_contact_addr_et_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/commom_margin_30"
            android:layout_marginTop="@dimen/commom_margin_10"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/plz_input_detail_addr"
            android:textColor="@color/common_tv_light_gray"
            android:textSize="@dimen/commom_tv_size_14" />
    </LinearLayout>
    <com.alpha.alphaapp.ui.widget.tx.ErrorTextView
        android:id="@+id/mod_contact_addr_tv_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible" />
    <Button
        android:id="@+id/mod_contact_addr_btn_save"
        style="@style/btn_one_com_gray"
        android:text="@string/save"
      />
</LinearLayout>