<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="54dp"
    android:background="@color/common_bg_white"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/commom_margin_14"
    android:paddingRight="@dimen/commom_margin_14">

    <ImageView
        android:id="@+id/acc_edit_iv_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/icon_user_super" />

    <EditText
        android:id="@+id/acc_edit_et_hint"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/commom_margin_30"
        android:layout_weight="1"
        android:background="@null"
        android:gravity="center_vertical"
        android:maxLength="12"
        android:singleLine="true"
        android:maxLines="1"
        android:textColor="@color/common_tv_light_gray"
        android:textSize="@dimen/commom_tv_size_15" />

    <ImageView
        android:id="@+id/acc_edit_iv_del"
        android:layout_width="@dimen/commom_length_20"
        android:layout_height="@dimen/commom_height_20"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/commom_margin_12"
        android:clickable="true"
        android:src="@drawable/et_del"
        android:visibility="invisible" />
</LinearLayout>