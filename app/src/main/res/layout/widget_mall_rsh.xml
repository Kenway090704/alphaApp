<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:clickable="true"
    android:layout_height="wrap_content">



    <LinearLayout
        android:id="@+id/widget_mall_rsh_remcomd_layout"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/commom_margin_8"
            android:layout_marginTop="@dimen/commom_margin_8"
            android:src="@drawable/icon_recommend_n" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/commom_margin_6"
            android:text="@string/recommend"
            android:textColor="@color/common_tv_dali_black"
            android:textSize="@dimen/commom_tv_size_13" />
    </LinearLayout>
    <View
        android:layout_width="@dimen/commom_length_2"
        android:layout_height="match_parent"
        android:background="@color/common_bg_dali_light_gray" />

    <LinearLayout
        android:id="@+id/widget_mall_rsh_score_layout"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/commom_margin_8"
            android:layout_marginTop="@dimen/commom_margin_8"
            android:src="@drawable/icon_integral_n" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/commom_margin_6"
            android:text="@string/score"
            android:textColor="@color/common_tv_dali_black"
            android:textSize="@dimen/commom_tv_size_13" />
        <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/commom_margin_6"
        android:src="@drawable/arrow_up_n" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/commom_length_2"
        android:layout_height="match_parent"
        android:background="@color/common_bg_dali_light_gray" />

    <LinearLayout
        android:id="@+id/widget_mall_rsh_hot_layout"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/commom_margin_8"
            android:layout_marginTop="@dimen/commom_margin_8"
            android:src="@drawable/icon_heat_n" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/commom_margin_6"
            android:text="@string/hot_degree"
            android:textColor="@color/common_tv_dali_black"
            android:textSize="@dimen/commom_tv_size_13" />
        <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/commom_margin_6"
        android:src="@drawable/arrow_down_n" />
    </LinearLayout>

</LinearLayout>

