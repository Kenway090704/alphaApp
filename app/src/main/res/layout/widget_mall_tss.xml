<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


  <LinearLayout
      android:id="@+id/widget_mall_tss_layout_trans"
      android:layout_width="wrap_content"
      android:orientation="vertical"
      android:layout_height="wrap_content">
      <TextView
          android:id="@+id/widget_mall_tss_tv_trans"
          android:layout_width="wrap_content"
          android:text="@string/tranform_car"
          android:textSize="@dimen/commom_tv_size_16"
          android:clickable="true"
          android:textColor="@color/common_tv_dali_white"
          android:layout_height="match_parent" />
      <View
          android:id="@+id/widget_mall_tss_view_indictor"
          android:layout_marginTop="@dimen/commom_margin_3"
          android:layout_width="@dimen/commom_length_32"
          android:background="@drawable/shape_mall_tss_indictor"
           android:layout_gravity="center_horizontal"
          android:layout_height="@dimen/commom_height_2" />
  </LinearLayout>
    <LinearLayout
        android:id="@+id/widget_mall_tss_layout_super"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/commom_margin_11"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/widget_mall_tss_tv_super"
            android:layout_width="wrap_content"
            android:text="@string/super_waving"
            android:textSize="@dimen/commom_tv_size_16"
            android:clickable="true"

            android:textColor="@color/common_tv_dali_white"
            android:layout_height="match_parent" />
        <View
            android:id="@+id/widget_mall_tss_view_indictor2"
            android:layout_marginTop="@dimen/commom_margin_3"
            android:layout_width="@dimen/commom_length_32"
            android:background="@drawable/shape_mall_tss_indictor"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/commom_height_2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/widget_mall_tss_layout_speed"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/commom_margin_11"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/widget_mall_tss_tv_speed"
            android:layout_width="wrap_content"
            android:text="@string/zero_speed"
            android:textSize="@dimen/commom_tv_size_16"
            android:clickable="true"
            android:textColor="@color/common_tv_dali_white"
            android:layout_height="match_parent" />
        <View
            android:id="@+id/widget_mall_tss_view_indictor3"
            android:layout_marginTop="@dimen/commom_margin_3"
            android:layout_width="@dimen/commom_length_32"
            android:background="@drawable/shape_mall_tss_indictor"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/commom_height_2" />
    </LinearLayout>


</LinearLayout>