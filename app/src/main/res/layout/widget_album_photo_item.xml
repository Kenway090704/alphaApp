<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/widget_album_photo_item_iv"
        android:layout_width="@dimen/commom_height_90"
        android:layout_height="@dimen/commom_height_90"
        android:scaleType="centerCrop"
        android:background="@color/common_bg_dark_gray"
        android:src="@drawable/ic_launcher" />

    <CheckBox
        android:id="@+id/widget_album_photo_item_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        />

</FrameLayout>