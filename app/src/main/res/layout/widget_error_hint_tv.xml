<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/error_hint_Layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/commom_margin_30"
    android:gravity="center_vertical"
    android:orientation="horizontal"
   >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_warning" />

    <TextView
        android:id="@+id/error_hint_tv"
        android:layout_width="0dp"
        android:layout_height="@dimen/commom_margin_35"
        android:layout_marginLeft="@dimen/commom_margin_7"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textColor="@color/common_tv_dark_red"
        android:textSize="@dimen/commom_tv_size_12" />
</LinearLayout>