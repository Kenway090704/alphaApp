<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.alpha.alphaapp.ui.widget.et.AccountEditText
        android:id="@+id/bind_ac_aet_accout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:hint="@string/alpha_account"
        app:icon_type="@drawable/icon_user" />

    <com.alpha.alphaapp.ui.widget.et.AccountEditText
        android:id="@+id/bind_ac_aet_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:hint="@string/pw"
        app:icon_type="@drawable/icon_lock"
        app:input_type="password" />

    <TextView
        android:id="@+id/bind_ac_tv_error"
        style="@style/tv_error_com" />

    <Button
        android:id="@+id/bind_ac_btn_submit"
        style="@style/btn_com_gray"
        android:text="@string/submit" />

    <TextView
        android:id="@+id/bind_ac_tv_no_bind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/no_bind"
        android:textSize="16sp" />
</LinearLayout>