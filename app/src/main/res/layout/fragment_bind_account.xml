<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.alpha.alphaapp.ui.widget.et.AccountEditText
        android:id="@+id/bind_ac_aet_accout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hint="@string/alpha_account"
        app:icon_type="@drawable/icon_user_super" />

    <com.alpha.alphaapp.ui.widget.et.AccountEditText
        android:id="@+id/bind_ac_aet_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/commom_margin_5"
        app:hint="@string/pw"
        app:icon_type="@drawable/icon_password"
        app:input_type="password" />

    <com.alpha.alphaapp.ui.widget.tx.ErrorTextView
        android:id="@+id/bind_ac_tv_error"
        style="@style/tv_error_com" />

    <Button
        android:id="@+id/bind_ac_btn_submit"
        style="@style/btn_one_com_gray"
        android:text="@string/submit" />

    <TextView
        android:id="@+id/bind_ac_tv_no_bind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/commom_margin_25"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/no_bind"
        android:textColor="@color/common_tv_dark_red"
        android:textSize="@dimen/commom_tv_size_12" />
</LinearLayout>