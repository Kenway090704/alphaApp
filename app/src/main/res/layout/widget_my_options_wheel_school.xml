<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_bg_light_gray"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/commom_height_54"
        android:gravity="center"
        android:background="@color/common_bg_light_gray">


        <EditText
            android:id="@+id/dialog_my_wheel_opt_school_et_school"
            android:layout_width="@dimen/commom_length_301"
            android:layout_height="@dimen/commom_btn_height_40"
            android:layout_marginBottom="@dimen/commom_margin_7"
            android:layout_marginTop="@dimen/commom_margin_7"
            android:background="@drawable/shape_et_bg_red"
            android:gravity="center"
            android:hint="@string/input_school"
            android:textColor="@color/common_tv_light_gray"
            android:textSize="@dimen/commom_tv_size_18"
            android:textStyle="bold"/>
    </RelativeLayout>

    <com.alpha.alphaapp.ui.widget.wheel.WheelView
        android:id="@+id/dialog_my_wheel_opt_wheelView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/commom_heigth_180"
        android:background="@color/common_bg_light_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_bg_white"
        android:orientation="vertical">
        <Button
            android:id="@+id/dialog_my_wheel_opt_school_btn_save"
            style="@style/btn_one_com_red"
            android:layout_marginBottom="@dimen/commom_margin_4"
            android:layout_marginTop="@dimen/commom_margin_4"
            android:text="@string/save" />
    </LinearLayout>
</LinearLayout>