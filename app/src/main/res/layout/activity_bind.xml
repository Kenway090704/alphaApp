<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:text="@string/bind_had_account"
        android:textColor="@color/tv_black"
        android:textSize="30sp" />

    <android.support.design.widget.TabLayout
        android:id="@+id/bind_tablayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v4.view.ViewPager
        android:id="@+id/bind_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/bind_tv_user_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:text="@string/app_user_center"
            android:textColor="@color/tv_black"
            android:textSize="20sp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="50dp"
            android:src="@drawable/launcher"
            android:layout_height="50dp"
            android:id="@+id/imageView"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/bind_tv_user_center"
            android:layout_marginBottom="13dp" />
    </RelativeLayout>

</LinearLayout>