<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <HorizontalScrollView
        android:id="@+id/dialog_mod_icon_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <android.support.design.widget.TabLayout
            android:id="@+id/dialog_mod_icon_tablayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabBackground="@drawable/selector_icon_choose_txt_bg"
            app:tabIndicatorColor="@color/white"
             />
    </HorizontalScrollView>

    <android.support.v4.view.ViewPager
        android:id="@+id/dialog_mod_icon_vp"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <Button
        android:id="@+id/dialog_mod_icon_btn"
        style="@style/btn_com_blue"
        android:text="@string/save" />
</LinearLayout>