<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.alpha.alphaapp.ui.widget.TitleLayout
        android:id="@+id/modify_pbpw_titlelayou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.alpha.alphaapp.ui.widget.et.AccountEditText
        android:id="@+id/modify_pbpw_aet_oldpw"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        app:hint="@string/old_password"
        app:input_type="password"
        app:icon_type="@drawable/icon_lock" />

    <com.alpha.alphaapp.ui.widget.et.AccountEditText
        android:id="@+id/modify_pbpw_aet_newpw"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        app:hint="@string/new_password"
        app:input_type="password"
        app:icon_type="@drawable/icon_lock" />

    <com.alpha.alphaapp.ui.widget.et.AccountEditText
        android:id="@+id/modify_pbpw_aet_insurepw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:hint="@string/confirm_password"
        app:input_type="password"
        app:icon_type="@drawable/icon_lock" />

    <TextView
        android:id="@+id/modify_pbpw_tv_error"
        style="@style/tv_error_com" />

    <Button
        android:id="@+id/modify_pbpw_btn_save"
        style="@style/btn_com_gray"
        android:hint="保存" />
</LinearLayout>