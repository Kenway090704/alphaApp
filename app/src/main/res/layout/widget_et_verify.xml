<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/commom_height_54"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/commom_margin_14">

    <ImageView
        android:id="@+id/verify_edit_iv_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/icon_verify_code" />

    <EditText
        android:id="@+id/verify_edit_et"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/commom_margin_30"
        android:layout_weight="1"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="@string/msg_verify"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/common_tv_light_gray"
        android:textSize="@dimen/commom_tv_size_15" />

    <ImageView
        android:id="@+id/verify_edit_iv_del"
        android:layout_width="@dimen/commom_length_20"
        android:layout_height="@dimen/commom_height_20"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/commom_margin_12"
        android:clickable="true"
        android:src="@drawable/et_del"
        android:visibility="invisible" />
    <TextView
        android:id="@+id/verify_edit_tv_getVerify"
        android:layout_width="@dimen/commom_length_103"
        android:layout_height="match_parent"
        android:background="@color/common_red"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/get_msg_verify"
        android:textColor="@color/common_tv_white"
        android:textSize="@dimen/commom_tv_size_12" />
</LinearLayout>