<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/commom_margin_35"
    android:background="@color/common_bg_white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/widget_mod_info_tv_left"
        style="@style/mine_left_item" />
    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />
    <TextView
        android:id="@+id/widget_mod_info_tv_msg"
        style="@style/mine_mid_tv"
        android:gravity="center" />

    <ImageView
        android:id="@+id/widget_mod_info_iv_right"
        style="@style/mine_next"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical" />

</LinearLayout>