<resources>
    <!--***************默认样式***************-->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--***************activity 的动画***************-->
    <style name="Anim_tran" parent="android:Theme.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/fade</item>
    </style>
    <style name="fade" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/out_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/in_from_right</item>
        <item name="android:activityCloseExitAnimation">@anim/out_to_left</item>
    </style>


    <!--***************正在加载中的对话框样式***************-->
    <style name="dialog_loading" parent="android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>


    <!--***************提示对话框样式***************-->
    <style name="dialog_alert" parent="android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/common_bg_white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!--**********控件使用的style***************-->
    <!--btn通用样式-->
    <style name="btn_com_gray">
        <item name="android:layout_height">@dimen/commom_height_40</item>
        <item name="android:background">@color/common_bg_dark_gray</item>
        <item name="android:textSize">@dimen/commom_tv_size_18</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="btn_com_red">
        <item name="android:layout_height">@dimen/commom_height_40</item>
        <item name="android:background">@color/common_bg_red</item>
        <item name="android:textSize">@dimen/commom_tv_size_18</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="btn_com_white">
        <item name="android:layout_height">@dimen/commom_height_40</item>
        <item name="android:background">@drawable/shape_com_bg_white</item>
        <item name="android:textSize">@dimen/commom_tv_size_18</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!--一行只有一个btn-->
    <style name="btn_one_com_gray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/commom_height_40</item>
        <item name="android:layout_marginRight">@dimen/commom_margin_30</item>
        <item name="android:layout_marginLeft">@dimen/commom_margin_30</item>
        <item name="android:background">@color/common_bg_dark_gray</item>
        <item name="android:enabled">false</item>
        <item name="android:textSize">@dimen/commom_tv_size_18</item>
        <item name="android:textColor">@color/common_tv_white</item>
    </style>

    <style name="btn_one_com_red">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/commom_height_40</item>
        <item name="android:layout_marginRight">@dimen/commom_margin_30</item>
        <item name="android:layout_marginLeft">@dimen/commom_margin_30</item>
        <item name="android:background">@color/common_bg_red</item>
        <item name="android:enabled">true</item>
        <item name="android:textSize">@dimen/commom_tv_size_18</item>
        <item name="android:textColor">@color/common_tv_white</item>
    </style>


    <!--***************tv_error通用样式***************-->
    <style name="tv_error_com">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">invisible</item>
    </style>


    <!--***************dialog中的样式***************-->
    <style name="dialog_com_tv_gray">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/common_tv_dark_gray</item>
        <item name="android:textSize">@dimen/commom_tv_size_18</item>
    </style>


    <!--***************资料设置页中的又边箭头***************-->
    <style name="mine_next">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/commom_margin_30</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/common_tv_dark_gray</item>
        <item name="android:src">@drawable/mine_set_next_2</item>
    </style>

    <style name="mine_left_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/commom_margin_30</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/common_tv_black</item>
        <item name="android:textSize">@dimen/commom_tv_size_14</item>
    </style>

    <style name="mine_mid_tv">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginRight">@dimen/commom_margin_13</item>
        <item name="android:layout_marginLeft">@dimen/commom_margin_13</item>
        <item name="android:textColor">@color/common_tv_dark_gray</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/commom_tv_size_14</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>


    <!--***************dialog_custom样式***************-->
    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>


    <!--***************底部弹出框样式***************-->
    <!--半透明背景Theme-->
    <style name="BottomViewTheme_Defalut">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/common_bg_white</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>


    <!--***************性别对话框***************-->
    <style name="BottomViewTheme_Sex" parent="@android:style/Theme.Dialog">
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
    </style>


    <!--***************底部对话框样式***************-->
    <style name="BottomViewTheme_Transparent">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <!-- Transparent -->
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/common_bg_white</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="BottomToTopAnim" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/anim_bottomview_enter</item>
        <item name="@android:windowExitAnimation">@anim/anim_bottomview_exit</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>


    <!--***************toggle***************-->
    <style name="MyToggleStyle" parent="@android:style/Widget.CompoundButton">
        <item name="android:button">@drawable/selector_toggle_btn</item>
    </style>


    <!--***************login_tab_textsize***************-->
    <style name="login_tab_txtSize">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Widget_GifView"></style>


</resources>
